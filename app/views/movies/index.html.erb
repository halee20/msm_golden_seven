<h1>Movies</h1>

<p><a href = "/movies/new_form">Add a Movie</a></p>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th>Image</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.duration %></td>
    <td><%= truncate(movie.description) %></td>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <a href = "/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href = "/movies/<%= movie.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href = "/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
