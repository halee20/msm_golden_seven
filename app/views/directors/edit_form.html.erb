<h1>Edit Director #<%= @director.id %></h1>

<form action = "/update_director/<%= @director.id %>">
  <div>
    <label for="name">
      Name
    </label>
    <div>
      <input type="text" id="name" name="name" placeholder="Name" value="<%= @director.name %>">
    </div>
  </div>

  <div>
    <label for="dob">
      Date of Birth
    </label>
    <div>
      <input type="text" id="dob" name="dob" placeholder="Date of Birth" value="<%= @director.dob %>">
    </div>
  </div>

  <div>
    <label for="bio">
      Biography
    </label>
    <div>
      <textarea id="bio" name="bio" placeholder="Biography">
        <%= @director.bio %>
      </textarea>
    </div>
  </div>

  <div>
    <label for="image_url">
      Image URL
    </label>
    <div>
      <input type="text" id="image_url" name="image_url" placeholder="Image URL" value="<%= @director.image_url %>">
    </div>
  </div>

  <div>
    <div>
      <input type="submit" value="Update Director">
    </div>
  </div>

</form>
