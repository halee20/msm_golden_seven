<h1>Directors</h1>

<p><a href = "/directors/new_form">Add a Director</a></p>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
    <th>Image</th>
  </tr>
  <% @directors.each do |director| %>
  <tr>
    <td><%= director.name %></td>
    <td><%= truncate(director.bio) %></td>
    <td><%= director.dob %></td>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <a href = "/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href = "/directors/<%= director.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href = "/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
