<h1>Actors</h1>

<p><a href = "/actors/new_form">Add an Actor</a></p>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
    <th>Image</th>
  </tr>
  <% @actors.each do |actor| %>
  <tr>
    <td><%= actor.name %></td>
    <td><%= truncate(actor.bio) %></td>
    <td><%= actor.dob %></td>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <a href = "/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href = "/actors/<%= actor.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href = "/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
